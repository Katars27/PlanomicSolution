<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Цветовая палитра (тёмная тема) -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <!-- Основной фон (тёмно-серый) -->
    <Color x:Key="SecondaryColor">#1F1F1F</Color>
    <!-- Вторичный фон (чуть светлее) -->
    <Color x:Key="AccentColor">#E53935</Color>
    <!-- Акцентный цвет (красный) -->
    <Color x:Key="TextColor">#F0F0F0</Color>
    <!-- Основной цвет текста (светло-серый) -->
    <Color x:Key="SecondaryTextColor">#A0A0A0</Color>
    <!-- Вторичный цвет текста (серый для плейсхолдеров) -->

    <!-- Глобальные стили -->

    <!-- Фон всех страниц -->
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
    </Style>

    <!-- Стиль текста (Label) -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="FontFamily" Value="OsakaSans" />
        <!-- Пользовательский ретро-шрифт -->
    </Style>

    <!-- Стиль кнопок (Button) -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <!-- Красный фон -->
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <!-- Белый текст -->
        <Setter Property="CornerRadius" Value="5" />
        <!-- Лёгкое скругление -->
        <Setter Property="FontFamily" Value="OsakaSans" />
        <!-- Ретро-шрифт -->
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- Стиль полей ввода (Entry) -->
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource SecondaryTextColor}" />
        <Setter Property="FontFamily" Value="OsakaSans" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="10,5" />
    </Style>

    <!-- Стиль для карточек (Frame) -->
    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

</ResourceDictionary>
