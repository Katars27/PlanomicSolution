<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Planomic.Views.MainPage"
             Title="Главная">

    <VerticalStackLayout Padding="30,50" Spacing="25">

        <Image Source="dotnet_bot.png" HeightRequest="150" Aspect="AspectFit" />

        <Label Text="Planomic" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label Text="Ваш личный планировщик проектов и задач" FontSize="16" HorizontalOptions="Center" />

        <Button Text="Перейти к проектам" Clicked="OnProjectsClicked" BackgroundColor="MediumPurple" TextColor="White" />

    </VerticalStackLayout>

</ContentPage>
